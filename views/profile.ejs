<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/profile.css">

    <title>Profile: <%= id %></title>
</head>
<body>
  <div class="content-layer">
  <div class="banner" style="background: url('/profile/<%= id %>/banner.png') center/cover no-repeat;">
    <div class="banner">
        <div>
            <img id="profileImg" src="/profile/<%= id %>/profile.png" alt="Profile Image">
        </div>
    </div>
  </div>


<!-- Info Section -->
  <div class="info-section">
          <% let title = titleLines[0].split('.'); %>
          <div class="info-title">
          <br><h1 style="text-align: center;"><%= title[0] %></h1></br>
          </div>

          <div class="container">
            <div class="info-content left-div">
              <div class="section">
                
          <% for(let i = 1; i < titleLines.length; i++) { %>
            <div class="line-spacing">
            <p> <%- titleLines[i] %> </p> 
            </div>
          <% } %> 
                    
                        <% for (let i = 0; i < bioLines.length; i++) { %>
                          <br>
                            <div class="row">
                                <div class="col"><strong style="font-size: larger;"><%= bioLines[i].split(':')[0].trim() %></strong></div>
                                <div class="col"><%= bioLines[i].split(':')[1].trim() %></div>
                            </div>
                          </br>
                        <% } %>
          
          </div>
        </div>


              <div class="image-block">
                    <img src="/profile/<%= id %>/image1.png" alt="Profile Image" />
              </div>
        
          </div>
  </div>
        
  

  

  
  
  
  
 <!-- Endorsement Section -->
 <div class=" endorsement-section ">
  <div class=" display-flex margin-around ">
           <!-- Left Side (Profile 2 Image) -->
      <div class="center-in-div left-div ">
          <img src="/profile/<%= id %>/image2.png" alt="Profile 2 Image" />
      </div>
       <!-- Right Side (Endorsements) -->
      <div class=" right-div">
      <div class="quote">
          <h2>ENDORSEMENTS</h2>
      </div>

      <div class="quote">
        
          <p>
            
        <% texts.forEach(function(text) { %>
          <div class="white-box"> <div class="quote"> <p><br><%= text %></br></p> </div> </div>
        <% }); %> </p>
        </div>
      </div>
      </div>
  </div>
 
  



<!-- Squad Debugging Whole the Meet -->
<div class="friends-section">
  <div>
    <h2>Squad Debugging Whole the Meet</h2>
  </div>

  <div class="friends-block">
        <a href="/profile/?id=jessy">
        <img src='/profile/jessy/profile.png' alt="Profile Image" >
        </a>

        <a href="/profile/?id=livlig">
        <img src="/profile/livlig/profile.png" alt="Profile Image" >
        </a>
     
        <a href="/profile/?id=mickey">
        <img src='/profile/mickey/profile.png' alt="Profile Image" >
        </a>

        <a href="/profile/?id=myprofile">
        <img src="/profile/myprofile/profile.png" alt="Profile Image" >
        </a>

        <a href="/profile/?id=teddy">
        <img src='/profile/teddy/profile.png' alt="Profile Image" >
        </a>
 </div>
</div>




<!-- Footer -->
<footer>Zefat Academic College</footer>
</div>

</body>
</html>
