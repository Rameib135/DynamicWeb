        <img src='/profile/jessy/profile.png' alt="Profile Image" >
        </a>

        <a href="/profile/?id=livlig">
        <img src="/profile/livlig/profile.png" alt="Profile Image" >
        </a>
     
        <a href="/profile/?id=mickey">
        <img src='/profile/mickey/profile.png' alt="Profile Image" >
        </a>

        <a href="/profile/?id=myprofile">
        <img src="/profile/myprofile/profile.png" alt="Profile Image" >
        </a>

        <a href="/profile/?id=teddy">
        <img src='/profile/teddy/profile.png' alt="Profile Image" >
        </a>
 </div>
</div>




<!-- Footer -->
<footer>Zefat Academic College</footer>
</div>

</body>
</html>
